<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="sensor_camera">
    <xacro:property name="camera_origin_x" value="0.5145"/>
    <xacro:property name="camera_origin_y" value="0"/>
    <xacro:property name="camera_origin_z" value="0.08376"/>

    <xacro:macro name="d435i">
        <link name="d435i">
            <visual>
                <origin xyz="0 0 0" rpy="1.57 0 1.57"/>
                <geometry>
                    <mesh filename="package://diffamr_description/meshes/accessories/D435i.stl" scale="0.001 0.001 0.001"/>
                </geometry>
                <material name="black"/>
            </visual>
            <collision>
                <origin  xyz="0 0 0" rpy="1.57 0 1.57"/>
                <geometry>
                   <mesh filename="package://diffamr_description/meshes/accessories/D435i.stl" scale="0.001 0.001 0.001"/>
                </geometry>
            </collision>
            <inertial>
                <origin rpy="0 0 0" xyz="0.0125468500947854 0.0011824094783870413 6.326174103561677e-05"/>
                <mass value="0.33805934343994715"/>
                <inertia ixx="0.000211" ixy="-2e-06" ixz="-0.0" iyy="3.1e-05" iyz="0.0" izz="0.000212"/>
            </inertial>
        </link>


        <joint name="d435i_joint" type="fixed">
            <origin xyz="${camera_origin_x} 0 ${camera_origin_z}" rpy="0 0 0"/>
            <parent link="base_link"/>
            <child link="d435i"/>
        </joint>

    </xacro:macro>

</robot>
