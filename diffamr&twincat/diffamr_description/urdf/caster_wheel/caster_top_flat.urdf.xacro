<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="caster_top_flat">
    <xacro:macro name="caster_top_flat" params="prefix reflect reflect_x">
        <link name="${prefix}_top_flat">
            <visual>
                <origin xyz="0 0 0" rpy="0 0 1.57"/>
                <geometry>
                    <mesh filename="package://diffamr_description/meshes/caster_wheel/caster_wheel_top.stl" scale="0.001 0.001 0.001"/>
                </geometry>
                <material name="white"/>
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="0 0 1.57"/>
                <geometry>
                    <mesh filename="package://diffamr_description/meshes/caster_wheel/caster_wheel_top.stl" scale="0.001 0.001 0.001"/>
                </geometry>
            </collision>
            <inertial>
                <origin rpy="0 0 0" xyz="-2.170775276200132e-08 -6.448720446528e-10 -0.006384438817943215"/>
                <mass value="0.5844435507164926"/>
                <inertia ixx="0.0003" ixy="0.0" ixz="-0.0" iyy="0.000379" iyz="0.0" izz="0.00066"/>
            </inertial>
        </link>
        <joint name="${prefix}_top_flat_joint" type="fixed">
            <parent link="base_link"/>
            <child link="${prefix}_top_flat"/>
            <origin xyz="${reflect_x*-0.375} ${reflect*-0.17} 0.0115"
                    rpy="0 0 0"/>
        </joint>
    </xacro:macro>

</robot>