    <!-- Sick nanoscan Lidar -->
    <gazebo reference="front_sicknanoscan">
        <sensor type="ray" name="front_sensor">
            <pose>0 0 0 0 0 0</pose>
            <visualize>true</visualize>
            <update_rate>50</update_rate>
            <ray>
                <scan>
                    <horizontal>
                        <!--samples>1588</samples-->
                        <samples>720</samples>
                        <resolution>1</resolution> 
                        <min_angle>-2.35</min_angle>
                        <max_angle>2.35</max_angle>
                    </horizontal>
                </scan>
                <range>
                    <min>0.10</min>
                    <max>40.0</max>
                    <resolution>0.02</resolution>
                </range>
                <noise>
                    <type>gaussian</type>
                    <mean>0.0</mean>
                    <stddev>0.001</stddev>
                </noise>
            </ray>

            <plugin name="gazebo_ros_head_hokuyo_controller" filename="libgazebo_ros_laser.so">
                <topicName>/sick_safetyscanners_front/scan</topicName>
                <frameName>front_sicknanoscan</frameName>
            </plugin>
        </sensor>
    </gazebo>

    <gazebo reference="rear_sicknanoscan">
        <sensor type="ray" name="rear_sensor">
            <pose>0 0 0 0 0 0</pose>
            <visualize>true</visualize>
            <update_rate>50</update_rate>
            <ray>
                <scan>
                    <horizontal>
                        <samples>720</samples>
                        <resolution>1</resolution>
                        <min_angle>-2.35</min_angle>
                        <max_angle>2.35</max_angle>
                    </horizontal>
                </scan>
                <range>
                    <min>0.10</min>
                    <max>40.0</max>
                    <resolution>0.02</resolution>
                </range>
                <noise>
                    <type>gaussian</type>
                    <mean>0.0</mean>
                    <stddev>0.001</stddev>
                </noise>
            </ray>

            <plugin name="gazebo_ros_head_hokuyo_controller" filename="libgazebo_ros_laser.so">
                <topicName>/sick_nanoscan/rear_scan</topicName>
                <frameName>rear_sicknanoscan</frameName>
            </plugin>
        </sensor>
    </gazebo>
